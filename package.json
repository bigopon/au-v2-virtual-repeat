{
  "name": "aurelia-v2-virtual-repeat",
  "description": "An Aurelia 2 virtual repeat implementation.",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/bigopon/aurelia-v2-virtual-repeat"
  },
  "license": "MIT",
  "files": [
    "dist",
    "src"
  ],
  "dependencies": {
    "@aurelia/kernel": "*",
    "@aurelia/runtime": "*",
    "@aurelia/runtime-html": "*"
  },
  "devDependencies": {
    "@aurelia/testing": "dev",
    "@rollup/plugin-typescript": "^8.2.1",
    "@types/node": "^14.14.21",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "aurelia": "*",
    "eslint": "^7.18.0",
    "postcss": "^8.2.4",
    "rimraf": "^3.0.2",
    "rollup": "^2.44.0",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "lint": "eslint src test --ext .js,.ts",
    "build": "rimraf dist && rollup -c",
    "build:types": "tsc --outDir dist/types --declaration --emitDeclarationOnly",
    "postbuild": "npm run build:types",
    "test": "npm run test:headless",
    "test:watch": "rimraf dist && webpack --env test --watch --runTest"
